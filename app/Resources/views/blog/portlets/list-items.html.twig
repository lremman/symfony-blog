{% for article in articles %}

	<div class="col-md-10">
		<div class="card blog-item-card">
		  <div class="card-body">
		    <h4 class="card-title">
		    	<a href="{{ path('blog_item', article.getUrlParams()) }}">
		    		{{ article.getTitle() }}</h4>
		    	</a>
		    <h6 class="card-subtitle mb-2 text-muted">{{ article.getCreatedAt()|date('d.m.Y, h:i A') }}</h6>
		    <p class="card-text">{{ article.description() }}</p>
		    <a href="{{ path('blog_item', article.getUrlParams()) }}" class="card-link">Read more</a>
		  </div>
		</div>
		<br>
	</div>

{% endfor %}
